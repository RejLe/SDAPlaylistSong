<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
    xmlns:gap="http://phonegap.com/ns/1.0"
    id="com.phonegap.adventistplaylist"
    versionCode="1"
    version="1.0">

    <name>SDA Playlist Song</name>

    <description>Hear an Adventist playlist songs.</description>

    <author href="google.com" email="maningokorak@gmail.com">BSIT-3EAST : Danielle Ace Sevillejo, Samantha Cena, Jerry Escario </author>

    <icon src="res/icon.png"/>
    <splash src="res/screen/android/icon.png"/>

    <platform name="ios"/>
   <platform name="android">
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/icon.png" />
    <preference name="AndroidWindowSplashScreenBackground" value="#bbbbbbee"/>
    <preference name="SplashScreenBackgroundColor" value="#bbbbbbee"/>
    <allow-intent href="market:*"/>
    
    <icon density="ldpi" src="res/icon/android/icon.png" />
        <icon density="mdpi" src="res/icon/android/icon.png" />
        <icon density="hdpi" src="res/icon/android/icon.png" />
        <icon density="xhdpi" src="res/icon/android/icon.png" />
        <icon density="xxhdpi" src="res/icon/android/icon.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon.png" />
        
        <!-- Legacy splash screen configuration -->
        <splash density="land-ldpi" src="res/screen/android/icon.png" />
        <splash density="land-mdpi" src="res/screen/android/icon.png" />
        <splash density="land-hdpi" src="res/screen/android/icon.png" />
        <splash density="land-xhdpi" src="res/screen/android/icon.png" />
        <splash density="land-xxhdpi" src="res/screen/android/icon.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/icon.png" />
        <splash density="port-ldpi" src="res/screen/android/icon.png" />
        <splash density="port-mdpi" src="res/screen/android/icon.png" />
        <splash density="port-hdpi" src="res/screen/android/icon.png" />
        <splash density="port-xhdpi" src="res/screen/android/icon.png" />
        <splash density="port-xxhdpi" src="res/screen/android/icon.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/icon.png" />
    </platform>
    <platform name="winphone"/>


    <preference name="phonegap-version" value="cli-6.5.0"/>
</widget>